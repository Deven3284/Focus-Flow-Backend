<script src="/javascripts/controllers/accountSettingsController.js"></script>
<div class="page-wrapper" ng-controller="AccountSettingsController">
    <div class="page-header d-print-none" aria-label="Page header">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h1 class="page-title">Account Settings</h1>
                    <div class="text-muted mt-1">Manage your personal information and account settings</div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <div class="avatar avatar-xl"
                                    style="background-image: url({{personalForm.profileImage}})">
                                </div>
                            </div>
                            <h3 class="mb-1">{{personalForm.name}}</h3>
                            <div class="text-muted mb-3">{{personalForm.jobTitle}}</div>

                            <div class="d-flex justify-content-center gap-2 mb-4">
                                <button ng-disabled="isUploading" class="btn btn-outline-primary btn-pill"
                                    ng-click="openCamera()">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
                                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="icon icon-tabler icons-tabler-outline icon-tabler-camera">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <path
                                            d="M5 7h1a2 2 0 0 0 2 -2a1 1 0 0 1 1 -1h6a1 1 0 0 1 1 1a2 2 0 0 0 2 2h1a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-9a2 2 0 0 1 2 -2" />
                                        <path d="M9 13a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
                                    </svg>
                                    {{ isUploading ? 'Uploading...' : 'Take Selfie' }}
                                </button>
                            </div>

                            <div class="hr-text hr-text-left my-4">Account Security</div>

                            <div class="list-group list-group-transparent mb-0">
                                <div style="cursor: pointer;" ng-click="onTabChange(item)"
                                    class="list-group-item list-group-item-action d-flex align-items-center {{ item == selectedItem ? 'active' : '' }}"
                                    ng-repeat="item in lists">
                                    <svg ng-show="item == 'Personal Information'" xmlns="http://www.w3.org/2000/svg"
                                        width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                        class="icon icon-tabler icons-tabler-outline icon-tabler-user me-3">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                                        <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                                    </svg>

                                    <svg ng-show="item == 'Change Password'" xmlns="http://www.w3.org/2000/svg"
                                        width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                        class="icon icon-tabler icons-tabler-outline icon-tabler-lock me-3">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <path
                                            d="M5 13a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v6a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-6z" />
                                        <path d="M11 16a1 1 0 1 0 2 0a1 1 0 0 0 -2 0" />
                                        <path d="M8 13v-4a4 4 0 1 1 8 0v4" />
                                    </svg>
                                    {{item}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8" ng-show="selectedItem == 'Personal Information'">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Personal Information <span class="badge">View Only</span></h3>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" ng-model="personalForm.name"
                                            ng-disabled="true">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Email Address</label>
                                    <input type="email" class="form-control" ng-model="personalForm.email"
                                        ng-disabled="true">
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Position</label>
                                        <input type="text" class="form-control" ng-model="personalForm.jobTitle"
                                            ng-disabled="true">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Mobile</label>
                                        <input type="text" class="form-control" ng-model="personalForm.mobile"
                                            ng-disabled="true">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8" ng-show="selectedItem == 'Change Password'">
                    <form ng-submit="onSubmit()">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Change Password</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label">Old Password</label>
                                        <input type="password" class="form-control" name="new-password"
                                            autocomplete="off" ng-model="form.oldPassword" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md">
                                        <label class="form-label">New Password</label>
                                        <input type="password" class="form-control" ng-model="form.newPassword"
                                            required>
                                    </div>
                                    <div class="col-md">
                                        <label class="form-label">New Password</label>
                                        <input type="password" class="form-control" ng-model="form.confirmPassword"
                                            required>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <button class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden video and canvas elements for camera capture -->
    <video id="cameraFeed" autoplay style="display: none;"></video>
    <canvas id="photoCanvas" style="display: none;"></canvas>

    <!-- Camera Modal -->
    <div class="modal" id="cameraModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Take Selfie</h5>
                    <button type="button" class="btn-close" ng-click="closeCameraModal()" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Position your face in the camera and click 'Capture' to take a selfie.</p>
                    <video id="cameraPreview" autoplay style="width: 100%; max-height: 300px;"></video>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="closeCameraModal()">Cancel</button>
                    <button type="button" class="btn btn-primary" ng-click="capturePhoto()" ng-disabled="isUploading">
                        {{ isUploading ? 'Uploading...' : 'Capture' }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>