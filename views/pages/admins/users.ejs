<script src="/javascripts/controllers/userController.js"></script>

<div class="container-fluid" ng-controller="UsersController">
  <!-- Page Header -->
  <div class="page-header mt-1 d-print-none">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="page-title mb-0">Users</h2>
      </div>
    </div>
  </div>

  <!-- Page Body -->
  <div class="page-body">
    <div class="row">
      <div class="col-md-4">
        <div class="card rounded-0">
          <div class="card-header">
            <h4 class="card-title">{{form._id == '' ? 'Create' : 'Edit'}} User</h4>
          </div>
          <div class="card-body p-4">
            <form ng-submit="onSubmit()" autocomplete="off">
              <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" ng-model="form.name" required>
              </div>
              <div class="form-group mt-3">
                <label>Email ID</label>
                <input type="email" class="form-control" ng-model="form.email" required>
              </div>
              <div class="form-group mt-3">
                <label>Mobile</label>
                <input type="text" class="form-control" maxlength="10" ng-model="form.mobile" required>
              </div>
              <div class="form-group mt-3" ng-if="form._id == ''">
                <label>Password</label>
                <input type="password" class="form-control" autocomplete="new-password" minlength="6" ng-model="form.password" required>
              </div>
              <div class="form-group mt-3">
                <label>Job Title</label>
                <input type="text" class="form-control" ng-model="form.jobTitle" required>
              </div>
              <div class="form-group mt-3">
                <label>User Role</label>
                <select class="form-select" ng-model="form.role" ng-change="updateWorkType()" required>
                  <option value="admin">Admin</option>
                  <option value="developer">Developers</option>
                </select>
              </div>
              <!-- Work Type Dropdown (shows only for developer) -->
              <div class="form-group mt-3" ng-show="form.role === 'developer'">
                <label>Work Type</label>
                <select class="form-select" ng-model="form.workType" required>
                  <option value="onsite">Onsite</option>
                  <option value="remote">Remote</option>
                </select>
              </div>
              <div class="form-group mt-3">
                <button class="btn btn-success" type="submit">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-circle-dashed-check">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M8.56 3.69a9 9 0 0 0 -2.92 1.95" />
                    <path d="M3.69 8.56a9 9 0 0 0 -.69 3.44" />
                    <path d="M3.69 15.44a9 9 0 0 0 1.95 2.92" />
                    <path d="M8.56 20.31a9 9 0 0 0 3.44 .69" />
                    <path d="M15.44 20.31a9 9 0 0 0 2.92 -1.95" />
                    <path d="M20.31 15.44a9 9 0 0 0 .69 -3.44" />
                    <path d="M20.31 8.56a9 9 0 0 0 -1.95 -2.92" />
                    <path d="M15.44 3.69a9 9 0 0 0 -3.44 -.69" />
                    <path d="M9 12l2 2l4 -4" />
                  </svg> Save
                </button>
                <button class="btn btn-dark ms-2" type="button" ng-click="resetForm()">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-refresh">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4" />
                    <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4" />
                  </svg> Reset
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card rounded-0">
          <div class="card-body p-4">
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" ng-model="search" ng-keyup="onSearch()"
                  placeholder="Search here...">
              </div>
              <div class="col-auto">
                <select class="form-select" ng-model="selectedRole" ng-change="onSearch()">
                  <option value="">All</option>
                  <option value="onsite">On Site</option>
                  <option value="remote">Remote</option>
                </select>
              </div>
            </div>
            <div class="table-responsive mt-3">
              <table class="table table-vcenter table-bordered">
                <thead>
                  <tr>
                    <th class="text-center" style="width: 5%">#</th>
                    <th>Name</th>
                    <th class="text-center">Email ID</th>
                    <th class="text-center">Password</th>
                    <th class="text-center">Work Type</th> <!-- New column -->
                    <th class="text-center">Status</th>
                    <th class="text-center" style="width: 15%">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <tr ng-repeat="user in users track by $index">
                    <td class="text-center">
                      {{ ($index + 1) + ((pagination.page - 1) * pagination.limit) }}
                    </td>
                    <td>
                      <div>{{user.name}}</div>
                      <div class="text-muted" style="font-size:12px">
                        {{user.jobTitle | uppercase}}
                      </div>
                      <div class="text-muted" style="font-size:10px; letter-spacing: 1.5px;">
                        {{user.role | uppercase}} ROLE
                      </div>
                    </td>
                    <td class="text-center">
                      <div style="font-size: 12px;">{{user.email}}</div>
                      <div style="font-size: 12px;">{{user.mobile}}</div>
                    </td>
                    <td class="text-center">
                      <div style="font-size: 12px;" class="fw-bold text-danger">{{user.plainPassword || '-'}}</div>
                    </td>
                    <td class="text-center">
                      <div style="font-size: 12px;">{{user.workType ? (user.workType | uppercase) : '-'}}</div>
                    </td>
                    <td class="text-center">
                      <span ng-click="toggleAccountStatus($index)"
                        class="badge bg-{{user.isActive ? 'lime' : 'pink' }} text-white">
                        {{user.isActive ? 'Active': 'In Active'}}
                      </span>
                    </td>
                    <td class="text-center">
                      <button class="btn btn-sm btn-outline-info btn-action" type="button" title="Edit"
                        ng-click="editUser(user)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          class="icon icon-tabler icons-tabler-outline icon-tabler-edit">
                          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                          <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" />
                          <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" />
                          <path d="M16 5l3 3" />
                        </svg>
                      </button>

                      <button class="btn btn-sm btn-outline-info btn-action" type="button" title="Edit"
                        ng-click="deleteUserAccount($index)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          class="icon icon-tabler icons-tabler-outline icon-tabler-trash">
                          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                          <path d="M4 7l16 0" />
                          <path d="M10 11l0 6" />
                          <path d="M14 11l0 6" />
                          <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                          <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                        </svg>
                      </button>
                    </td>
                  </tr>
                  <tr ng-if="users.length == 0">
                    <td colspan="7" class="text-center">NO RECORDS</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="text-end mt-2">
              <nav ng-if="pagination.totalPages > 1">
                <ul class="pagination">
                  <li class="page-item" ng-class="{disabled: !pagination.hasPrevPage}">
                    <a class="page-link" style="cursor: pointer;"
                      ng-click="changePage(pagination.prevPage)">Previous</a>
                  </li>
                  <li class="page-item" ng-repeat="page in pages" ng-class="{active: pagination.page == page}">
                    <a class="page-link" style="cursor: pointer;" ng-click="changePage(page)">{{page}}</a>
                  </li>
                  <li class="page-item" ng-class="{disabled: !pagination.hasNextPage}">
                    <a class="page-link" style="cursor: pointer;" ng-click="changePage(pagination.nextPage)">Next</a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>